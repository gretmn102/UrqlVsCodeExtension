{
	"name": "urql",
	"displayName": "URQL",
	"description": "URQL provider",
    "publisher": "Fering",
    "version": "0.0.1",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./Extension.js",
	"contributes": {
		"languages": [
			{
				"id": "urql",
				"aliases": [
					"URQL",
					"urql"
				],
				"extensions": [
					".qst"
				],
				"configuration": "./language-configuration.json"
			}
        ],
		"commands": [
			{
				"command": "urql-extension.helloWorld",
				"title": "Hello World"
			}
        ]
	},
	"scripts": {
		"build": "fable-splitter --config splitter.config.js",
		"watch": "yarn run build --watch",
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@babel/plugin-transform-modules-commonjs": "^7.10.4",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.48.0",
		"eslint": "^7.6.0",
		"fable-compiler": "^2.13.0",
		"fable-splitter": "^2.2.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
        "vscode-test": "^1.4.0",
        "vscode-languageclient": "6.1.3"
	}
}
